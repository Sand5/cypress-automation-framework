{
  "name": "cypress-automation-framework",
  "version": "1.0.0",
  "description": "Cypress Automation Framework",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cypress:open:watch": "nodemon --watch cypress/e2e --exec 'npx cypress open'",
    "triggerAllTests-headless": "npx cypress run",
    "triggerAllTests-headed": "npx cypress run --headed",
    "triggerAllTests-chrome": "npx cypress run --browser chrome",
    "triggerAllTests-dashboard": "npx cypress run --record --key 0294c806-00ee-48a2-af13-0d17f1cff52c",
    "triggerallfeatures": "cypress run --spec 'cypress/e2e/**/*.feature'",
    "triggerAllTests-webdriveruni": "npx cypress run --spec cypress/e2e/webdriveruni/*.js",
    "triggerAllTests-autoTestStore": "npx cypress run --spec cypress/e2e/automation-test-store/*.js",
    "mergeMochawesomeReports": "npx mochawesome-merge cypress/results/mochawesome/*.json > mochawesome.json && npx marge mochawesome.json",
    "deleteMochawesomeReports": "rm -rf cypress/results/mochawesome/*.json || true",
    "deleteMochawesomeMergedReport": "rm -rf mochawesome-report || true",
    "delete-results": "rm -rf cypress/results || true",
    "regression-pack": "npm run delete-results && npm run deleteMochawesomeMergedReport && npm run triggerAllTests-headless && npm run mergeMochawesomeReports",
    "triggerAllTests-staging": "npx cypress run --env configFile=staging",
    "triggerlint": "eslint .",
    "triggerlint:fix": "eslint . --fix",
    "triggerformat:check": "prettier --check .",
    "cypress-multi-browser": "npm run triggerAllTests-autoTestStore -- --browser electron --headed & npm run triggerAllTests-autoTestStore -- --browser chrome --headed"
  },
  "prettier": {
    "singleQuote": false,
    "endOfLine": "lf"
  },
  "author": "Sanderson Imbeah",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.1.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.6",
    "@cypress/browserify-preprocessor": "^3.0.2",
    "@cypress/xpath": "^2.0.3",
    "cypress": "^15.2.0",
    "cypress-multi-reporters": "^2.0.5",
    "esbuild": "^0.25.9",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^5.1.1",
    "eslint-plugin-prettier": "^5.5.4",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
